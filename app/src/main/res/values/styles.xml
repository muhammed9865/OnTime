<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="scheduleTextOptions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <style name="ScheduleTextField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:background">@drawable/schedule_textfield_bg</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="android:inputType">textShortMessage</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
</resources>